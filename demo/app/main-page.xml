<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" actionBarHidden="true">
        <GridLayout rows="auto, *" columns="*">
            <Image id="logo" row="0" class="logo" src="~/images/download.png" stretch ="aspectFit" />
            <GridLayout rows="auto, auto, *, *, 60" row="1" class="logowrapper">
                <Button row="0" text="Click Me" tap="mainActionTap" />
                <Button row="1" text="Navigate Away"  tap="secondaryActionTap" />
                
                <StackLayout row="2" id="genstureSwipe" class="gesturezone" >
                    <Label text="Swipe Me" class="labeltext" />    
                </StackLayout>
                
                <StackLayout row="3" id="genstureLongTap" class="gesturezone" >
                    <Label text="Long Press Me" class="labeltext" />    
                </StackLayout>
                <Label row="4" text="Dispatch Message Queue" tap="onDispatchQueue" style="text-align:right; width: 100%;margin-right: 20;" />
            </GridLayout>
        </GridLayout>    
</Page>
